#! /usr/bin/perl
# ABSTRACT: Extract, format, classify and annote events identified by CRAC.
# PODNAME: cractools

use strict;
use warnings;

use Getopt::Long qw(:config auto_version ); # Get options
use Pod::Usage;
use CracTools;

=head1 SYNOPSIS

  cractools extract
  cractools count
  cractools help (this message)

=cut

# Get the command arguments
my $command = shift;

my %commands = (extract => 'cractools-extract',
  count => 'cractools-count',
);

if(defined $command && defined $commands{$command}) {
  system($commands{$command},@ARGV);
} else {
  pod2usage(-verbose => 1);
  exit 0;
}
